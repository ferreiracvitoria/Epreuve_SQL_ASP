@model ASPEpreuve.Models.ProduitDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Section n° @Model.Id_Produit@(Model.Nom is null ? "" : $" - {Model.Nom}")</h1>

<div>
    <h4>ProduitDetailsViewModel</h4>
    <hr />
    <div>
        @foreach (var imageUrl in ViewBag.MediaUrls)
        {
            <img src="@Url.Content($"~/assets/img/{imageUrl}")" alt="Product Image" class="image-details" />
        }
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Categorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Categorie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id_Produit }) |
    <a asp-action="Index">Back to List</a>
</div>

